<Window x:Class="WPF_Sample.View.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="200" Width="500"
        Background="WhiteSmoke">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <ProgressBar Name="progress" Width="200" Height="25" />
            <Button Name="btn" Content="Start" Width="100" Height="25" Margin="5,0,0,0" Click="OnStartClick" />
        </StackPanel>
    </Grid>
</Window>
